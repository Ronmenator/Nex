{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["<", ">"],
    ["{", "}"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "<", "close": ">" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "{", "close": "}" },
    { "open": "<!--", "close": "-->" }
  ],
  "surroundingPairs": [
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "<(?!/?(?:Window|Column|Row|Stack|Scroll|Grid)[\\s/>])[^/]*>$",
    "decreaseIndentPattern": "^\\s*</"
  }
}
