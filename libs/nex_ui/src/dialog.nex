// nex_ui.dialog — Dialog boxes (message, confirm, file pickers).

// ===========================================================================
// Core dialog functions (existing API — preserved)
// ===========================================================================

public def message(title: String, msg: String) {
    ui_dialog_message(title, msg)
    return
}

public def confirm(title: String, msg: String) -> Bool {
    return ui_dialog_confirm(title, msg) != 0
}

public def open_file(title: String, filter: String) -> String {
    return ui_dialog_open_file(title, filter)
}

public def save_file(title: String, filter: String) -> String {
    return ui_dialog_save_file(title, filter)
}

// ===========================================================================
// Convenience dialogs — pre-titled for common use cases.
// ===========================================================================

public def error_dialog(msg: String) {
    ui_dialog_message("Error", msg)
    return
}

public def warning_dialog(msg: String) {
    ui_dialog_message("Warning", msg)
    return
}

public def info_dialog(msg: String) {
    ui_dialog_message("Information", msg)
    return
}
