public def BLEND_OPAQUE() -> Int64   { return 0 }
public def BLEND_ALPHA() -> Int64    { return 1 }
public def BLEND_ADDITIVE() -> Int64 { return 2 }
public def BLEND_MULTIPLY() -> Int64 { return 3 }

public def set_blend_mode(mode: Int64) {
    engine_set_blend_mode(mode)
    return
}

