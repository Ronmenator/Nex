// nex3d.gamepad â€” Gamepad input queries via gilrs.
// Supports up to 4 players (0-based index).

// ---- Connection ----

public def gamepad_connected(player: Int64) -> Bool {
    return engine_gamepad_connected(player) != 0
}

// ---- Buttons ----

public def gamepad_button(player: Int64, button: Int64) -> Bool {
    return engine_gamepad_button(player, button) != 0
}

// ---- Axes ----

// Returns axis value from -1.0 to 1.0.
// Axis codes: 0=LeftX, 1=LeftY, 2=RightX, 3=RightY
public def gamepad_axis(player: Int64, axis: Int64) -> Float {
    return engine_gamepad_axis(player, axis)
}

// Convenience: returns left stick as Vec2
public def gamepad_left_stick(player: Int64) -> Vec2 {
    return Vec2(
        engine_gamepad_axis(player, 0),
        engine_gamepad_axis(player, 1)
    )
}

// Convenience: returns right stick as Vec2
public def gamepad_right_stick(player: Int64) -> Vec2 {
    return Vec2(
        engine_gamepad_axis(player, 2),
        engine_gamepad_axis(player, 3)
    )
}

