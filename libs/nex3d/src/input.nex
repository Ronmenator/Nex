// nex3d.input â€” Keyboard and mouse input queries.
// Wraps nex_engine_* runtime FFI functions.

// ---- Keyboard ----

public def key_down(key: Int64) -> Bool {
    return engine_key_down(key) != 0
}

public def key_pressed(key: Int64) -> Bool {
    return engine_key_pressed(key) != 0
}

public def key_released(key: Int64) -> Bool {
    return engine_key_released(key) != 0
}

// ---- Mouse ----

public def mouse_x() -> Float {
    return engine_mouse_x()
}

public def mouse_y() -> Float {
    return engine_mouse_y()
}

public def mouse_delta_x() -> Float {
    return engine_mouse_delta_x()
}

public def mouse_delta_y() -> Float {
    return engine_mouse_delta_y()
}

public def mouse_button_down(button: Int64) -> Bool {
    return engine_mouse_button_down(button) != 0
}

public def mouse_button_pressed(button: Int64) -> Bool {
    return engine_mouse_button_pressed(button) != 0
}

