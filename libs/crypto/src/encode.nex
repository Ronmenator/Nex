// crypto.encode — Encoding and decoding utilities.

// ---------------------------------------------------------------------------
// Core encode/decode (existing API — preserved)
// ---------------------------------------------------------------------------

public def base64_encode(input: String) -> String {
    return crypto_base64_encode(input)
}

public def base64_decode(input: String) -> String {
    return crypto_base64_decode(input)
}

// ---------------------------------------------------------------------------
// Round-trip verification — encode then decode, check equality.
// Useful for verifying that a string survives base64 encoding intact.
// ---------------------------------------------------------------------------

public def base64_round_trip(input: String) -> Bool {
    encoded = crypto_base64_encode(input)
    decoded = crypto_base64_decode(encoded)
    return decoded == input
}
